---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

<section class="min-h-screen flex flex-col justify-center items-center px-4 py-12 bg-gradient-to-br from-emerald-50 to-green-50 pt-32">
    <h1 class="text-center font-semibold text-4xl md:text-5xl text-gray-800 mb-12 max-w-2xl leading-tight">
        Bienvenido a <span class="text-emerald-600">SUTENS</span>
    </h1>
    
    <div class="mt-8">
        <button class="group  bg-gradient-to-r from-emerald-500 to-green-600 hover:from-emerald-600 hover:to-green-700 text-white font-medium py-4 px-10 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <a href="/Afiliate" class="flex items-center space-x-3">
                <span class="text-lg">Afiliate hoy</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
            <div class="absolute -inset-1 rounded-xl bg-gradient-to-r from-emerald-500 to-green-600 opacity-0 group-hover:opacity-20 blur-sm transition-opacity duration-300 -z-10"></div>
        </button>
    </div>
	</section>